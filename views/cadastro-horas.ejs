<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cadastro de Horas</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Cadastro de Horas</h1>
  <nav>
    <a href="/">Home</a> |
    <a href="/funcionarios">Funcionários</a> |
    <a href="/cadastro-horas">Cadastrar Horas</a>
  </nav>
  <div id="app">
    <form action="/cadastro-horas" method="POST">
      <label for="funcionario">Funcionário:</label>
      <select id="funcionario" name="funcionarioId" required>
        <% funcionarios.forEach(funcionario => { %>
          <option value="<%= funcionario.id %>"><%= funcionario.nome %></option>
        <% }) %>
      </select>
      <br>
      <label for="horas">Horas Extras:</label>
      <input type="number" id="horas" name="horas" required>
      <br>
      <label for="folga">Horas de Folga:</label>
      <input type="number" id="folga" name="folga" required>
      <br>
      <button type="submit">Cadastrar</button>
    </form>
  </div>
</body>
</html>